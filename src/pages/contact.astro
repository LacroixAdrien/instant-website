---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <h1 class="text-3xl font-bold mb-4">Contact</h1>
  <form action="https://formspree.io/f/YOUR_ID" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Votre nom" required class="w-full border p-2" />
    <input type="email" name="email" placeholder="Votre email" required class="w-full border p-2" />
    <textarea name="message" placeholder="Votre message" required class="w-full border p-2"></textarea>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Envoyer</button>
  </form>
</BaseLayout>